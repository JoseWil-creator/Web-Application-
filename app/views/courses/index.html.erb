<p style="color: green"><%= notice %></p>

<h1>Courses</h1>
<%=form_tag(courses_url, method:"get") do %>
  <%= label_tag(:query, "Enter name to search for:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<div id="courses">
  <% @courses.each do |course| %>
    <%= render course %>
    <p>
      <%= link_to "Show this course", course %>
    </p>
  <% end %>
</div>

<%= link_to "New course", new_course_path %>
